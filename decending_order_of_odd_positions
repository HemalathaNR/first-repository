#include <stdio.h>

int main(void) {
int a[30],i,j=0,b[30],n,t,temp;
printf("Enter the size of the array\n");
scanf("%d",&n);
if(n%2!=0)
t=(n/2)+1;
else
t=n/2;
printf("Enter the array of size %d\n",n);
for(i=0;i<n;i++){
   scanf("%d",&a[i]);
   
}
for(i=0;i<n;i++){
   if(i%2==0){
      b[j]=a[i];
          j++;
    }
   
}
for(i=0;i<t;i++){
   for(j=i+1;j<t;j++){
       if(b[i]<b[j]){
           temp=b[i];
           b[i]=b[j];
           b[j]=temp;
       }
   }
}
for(i=0;i<t;i++){
   printf("%d ",b[i]);
}

return 0;
}
